{
  "version": 2,
  "builds": [
    {
      "src": "api/send-email.js",
      "use": "@vercel/node"
    },
    {
      "src": "*.html",
      "use": "@vercel/static"
    },
    {
      "src": "*.css",
      "use": "@vercel/static"
    },
    {
      "src": "*.js",
      "use": "@vercel/static",
      "config": {
        "exclude": ["api/**"]
      }
    }
  ],
  "routes": [
    {
      "src": "/send-email",
      "dest": "/api/send-email.js"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}